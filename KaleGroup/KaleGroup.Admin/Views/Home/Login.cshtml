@model KaleGroup.Admin.Models.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <title>Kale Arge</title>
 
    <!-- favicon -->
    <link rel="shortcut icon" href="~/images/favicon.ico">
    <!-- Bootstrap -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Icons -->
    <link href="~/css/materialdesignicons.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v2.1.9/css/unicons.css">
    <!-- Slider -->
    <link rel="stylesheet" href="~/css/owl.carousel.min.css" />
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css" />
    <!-- Main Css -->
    <link href="~/css/style.css" rel="stylesheet" type="text/css" id="theme-opt" />
    <link href="~/css/colors/default.css" rel="stylesheet" id="color-opt">
    <!-- Form Helper-->
    <link rel="stylesheet" href="/formhelper/formhelper.min.css" />



</head>

<body>

    <div class="back-to-home rounded d-none d-sm-block">
        <a href="@Url.Action("Index")" class="btn btn-icon btn-soft-primary"><i data-feather="home" class="icons"></i></a>
    </div>
    <!-- Hero Start -->
    <section class="bg-home d-flex align-items-center">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-7 col-md-6">
                    <div class="mr-lg-5">
                        <img src="~/images/user/login.svg" class="img-fluid d-block mx-auto" alt="">
                    </div>
                </div>
                <div class="col-lg-5 col-md-6">
                    <div class="card login-page bg-white shadow rounded border-0">
                        <div class="card-body">
                            <h4 class="card-title text-center">Login</h4>
                            <form class="login-form mt-4" asp-controller="Home" asp-action="Login" asp-formhelper="true">
                                @Html.AntiForgeryToken()
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group position-relative">
                                            <label>Kullanıcı Adı <span class="text-danger">*</span></label>
                                            <i data-feather="user" class="fea icon-sm icons"></i>
                                            <input type="userName" class="form-control pl-5" asp-for="Username">
                                            <span asp-validation-for="Username" class="text-danger mt-2"></span>
                                        </div>
                                    </div>

                                    <div class="col-lg-12">
                                        <div class="form-group position-relative">
                                            <label>Password <span class="text-danger">*</span></label>
                                            <i data-feather="key" class="fea icon-sm icons"></i>
                                            <input type="password" class="form-control pl-5" asp-for="Password">
                                            <span asp-validation-for="Password" class="text-danger mt-2"></span>
                                        </div>
                                    </div>

                                   <br />
                                   <br />
                                   <br />
                                  
                                    @if (Model.ShowCaptcha)
                                    {
                                        <div>
                                            <img src="data:image/png;base64,@ViewBag.CaptchaImage" alt="Captcha Image" />
                                            <input type="text"  name="CaptchaCode" placeholder="Captcha Kodu" />
                                        </div>
                                    }
                                    <br />
                                    <br />
                                    <div class="col-lg-12 mb-4">
                                        <input type="submit" class="btn btn-primary btn-block right" value="Login">
                                    </div>
                                </div>
                            </form>
                          
                          
                            
                       
                            @if (ViewBag.ResultText != "")
                            {
                                <div class="title-heading text-center mt-5 pt-3">

                                    <p style="color:red;" data-aos="fade-up" data-aos-duration="1800">@ViewBag.ResultText</p>
                                </div>
                            }
                        </div>
                    </div><!---->
                </div> <!--end col-->
            </div><!--end row-->
        </div> <!--end container-->
    </section><!--end section-->



    <script src="~/js/jquery-3.5.1.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/jquery.easing.min.js"></script>
    <script src="~/js/scrollspy.min.js"></script>
    <script src="~/js/jquery-3.5.1.min.js"></script>

    <!-- Icons -->
    <script src="~/js/feather.min.js"></script>
    <script src="https://unicons.iconscout.com/release/v2.1.9/script/monochrome/bundle.js"></script>
    <!-- Main Js -->
    <script src="~/js/app.js"></script>
    <!-- Form Helper -->
    <script src="/formhelper/formhelper.bundle.min.js"></script>
     <script src="~/js/jquery-3.5.1.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/jquery.easing.min.js"></script>
    <script src="~/js/scrollspy.min.js"></script>

    <!-- Icons -->
    <script src="~/js/feather.min.js"></script>
    <  src="https://unicons.iconscout.com/release/v2.1.9/script/monochrome/bundle.js"></script>
    <!-- Main Js -->
    <script src="~/js/app.js"></script>
    <!-- Form Helper -->
    <script src="/formhelper/formhelper.bundle.min.js"></script>
 
</body>
</html>


