@model KaleGroup.Web.Models.HomeViewModel
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="mt-5">
    <div class="container">
        <div class="promo-slider">
            <div class="swiper-container">
                <div class="swiper-wrapper">
                    @if (Model != null)
                    {
                        @foreach (var item in Model.SliderViewModel)
                        {
                            <div class="swiper-slide">
                                <a href="@item.PageUrl" title="">
                                    <img src="@item.FilePath" srcset="@item.FilePath" alt="">
                                </a>
                            </div>
                        }
                    }

                </div>
                <div class="d-block d-md-none swiper-pagination text-center"></div>
                <div class="swiper-prev">
                    <i class="mdi mdi-arrow-left"></i>
                </div>
                <div class="swiper-next">
                    <i class="mdi mdi-arrow-right"></i>
                </div>
            </div>
        </div>
    </div>
</section>
@if (Model != null)
{
    @foreach (var item in Model.TopBodyViewModel)
    {
        <section class="mt-7">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6 pr-0 pr-md-10">

                        <h2>@item.Name</h2>
                        <p>@item.Description</p>
                        <div>

                            @if (ViewBag.Language == "tr")
                            {
                                <a href="@Url.Action("Pages","Home", new { pageUrl = item.PageUrl })" title="" class="btn btn-danger">
                                    Daha Fazla
                                </a>
                            }
                            else
                            {
                                <a href="@Url.Action("Pages","Home", new { pageUrl = item.PageUrl })" title="" class="btn btn-danger">
                                    Learn More
                                </a>
                            }

                        </div>
                    </div>
                    <div class="col-md-6 mt-5 mt-md-0">
                        <img src="@item.FilePath" srcset="/@item.FilePath" alt="">
                    </div>
                </div>
            </div>
        </section>
    }
    @if (Model.ButtomBodyViewModel.Count > 0)
    {
        <section class="bg-teal">
            <div class="project-slider container py-4 py-md-7">
                <div class="swiper-container">
                    <div class="swiper-wrapper align-self-stretch pl-1 pb-2">
                        @foreach (var item in Model.ButtomBodyViewModel)
                        {
                            <div class="swiper-slide">
                                <a href="@Url.Action("Pages","Home", new { pageUrl = item.PageUrl })" title="" class="card h-100">
                                    <img src="/@item.FilePath" srcset="/@item.FilePath" class="card-img-top" alt="">
                                    <div class="card-body">
                                        <h6 class="card-title">@item.Name</h6>
                                    </div>
                                </a>
                            </div>
                        }
                    </div>
                </div>
                <div class="swiper-prev">
                    <i class="mdi mdi-arrow-left"></i>
                </div>
                <div class="swiper-next">
                    <i class="mdi mdi-arrow-right"></i>
                </div>
                <div class="container">
                    <div class="row align-items-center mt-4 mt-md-0">
                        <div class="col-5 col-md-12">
                            <div class="swiper-pagination text-left text-md-center"></div>
                        </div>
                        <div class="col-7 col-md-12">
                            <div class="mt-0 mt-md-7 text-right text-md-center">
                                @if (ViewBag.Language == "tr")
                                {
                                    <a href="@Url.Action("Pages","Home", new { pageUrl = "toplumsal_yatirim" })" class="btn btn-outline-dark">Tümünü Gör</a>
                                }
                                else
                                {
                                    <a href="@Url.Action("Pages","Home", new { pageUrl = "social_investments" })" class="btn btn-outline-dark">See All</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
    @if (Model.NewsBodyViewModel.Count > 0)
    {
        <section class="news-slider bg-light py-4 py-md-7">
            <div class="container">
                @if (ViewBag.Language == "tr")
                {
                    <h2 class="mb-5 text-center">Etkileşimler</h2>
                }
                else
                {
                    <h2 class="mb-5 text-center">Interactions</h2>
                }
                <div class="swiper-container">
                    <div class="swiper-wrapper align-self-stretch pl-1 pb-2">
                        @foreach (var item in Model.NewsBodyViewModel)
                        {
                            <div class="swiper-slide">
                                <a href="@Url.Action("Pages","Home", new { pageUrl = item.PageUrl })" title="" class="card h-100">
                                    <img src="/@item.FilePath" srcset="/@item.FilePath" class="card-img-top" alt="">
                                    <div class="card-body">
                                        <h6 class="card-title">
                                            @item.Name
                                        </h6>
                                    </div>
                                    <time class="text-xs text-muted px-4 mb-2">@item.NewsDate</time>
                                </a>
                            </div>
                        }
                    </div>
                </div>
                <div class="container">
                    <div class="row align-items-center mt-4 mt-md-0">
                        <div class="col-5 col-md-12">
                            <div class="d-block d-md-none swiper-pagination text-left text-md-center"></div>
                        </div>
                        <div class="col-7 col-md-12">
                            <div class="mt-0 mt-md-7 text-right text-md-center">
                                @if (ViewBag.Language == "tr")
                                {
                                    <a href="@Url.Action("Pages","Home", new { pageUrl = "etkilesimler" })" class="btn btn-outline-dark">Tümünü Gör</a>
                                }
                                else
                                {
                                    <a href="@Url.Action("Pages","Home", new { pageUrl = "interactions" })" class="btn btn-outline-dark">See All</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
}






