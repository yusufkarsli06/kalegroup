 
@model KaleGroup.Web.Models.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>

    <title>Kale Grubu</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="title" content="Kale Grubu">
    <meta name="description" content="">
    <meta name="keywords" content="">
    <link rel="shortcut icon" type="~/image/png" href="~/favicon.png" />
    <link rel="stylesheet" href="~/use.typekit.net/rlu6mzh.css">
    <link rel="stylesheet" href="~/cdn.jsdelivr.net/npm/%40mdi/font%404.7.95/css/materialdesignicons.min.css" />
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,700&amp;display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/cdn.jsdelivr.net/gh/fancyapps/fancybox%403.5.7/dist/jquery.fancybox.min.css" />
    <link rel="stylesheet" href="~/css/main.css">
    <link rel="stylesheet" href="~/css/extend.css">


</head>

<body>

  
    <!-- Hero Start -->
    <section class="bg-home d-flex align-items-center">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-7 col-md-6">
                    <div class="mr-lg-5">
                        <img src="~/images/user/signup.svg" class="img-fluid d-block mx-auto" alt="">
                    </div>
                </div>
                <div class="col-lg-5 col-md-6">
                    <div class="card login-page bg-white shadow rounded border-0">
                        <div class="card-body">
                            <h4 class="card-title text-center">Kale Group Admin Panel Giriş</h4>
                            <form asp-controller="Home" asp-action="Login" asp-validator="true">
                                @Html.AntiForgeryToken()
                                <div class="row">
                                 

                                  <div class="col-lg-12">
                                        <div class="form-group position-relative">
                                            <label>Kullanıcı Adı <span class="text-danger">*</span></label>
                                            <i data-feather="user" class="fea icon-sm icons"></i>
                                            <input type="userName" class="form-control pl-5" asp-for="Username">
                                            <span asp-validation-for="Username" class="text-danger mt-2"></span>
                                        </div>
                                    </div>

                                    <div class="col-lg-12">
                                        <div class="form-group position-relative">
                                            <label>Password <span class="text-danger">*</span></label>
                                            <i data-feather="key" class="fea icon-sm icons"></i>
                                            <input type="password" class="form-control pl-5" asp-for="Password">
                                            <span asp-validation-for="Password" class="text-danger mt-2"></span>
                                        </div>
                                    </div> 

                                    
                                    <div class="col-lg-12 mb-0">
                                        <input type="submit" class="btn btn-primary btn-block" value="Login">
                                    </div>
                                </div>
                            </form>
                        

                            @if (ViewBag.ResultText != "")
                            {
                                <div class="title-heading text-center mt-5 pt-3">

                                    <p style="color:red;" data-aos="fade-up" data-aos-duration="1800">@ViewBag.ResultText</p>
                                </div>
                            }
                        </div>
                    </div><!---->
                </div> <!--end col-->
            </div><!--end row-->
        </div> <!--end container-->
    </section><!--end section-->



    <script src="~/js/jquery-3.5.1.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/jquery.easing.min.js"></script>
    <script src="~/js/scrollspy.min.js"></script>
    <script src="~/js/jquery-3.5.1.min.js"></script>

    <!-- Icons -->
    <script src="~/js/feather.min.js"></script>
    <script src="https://unicons.iconscout.com/release/v2.1.9/script/monochrome/bundle.js"></script>
    <!-- Main Js -->
    <script src="~/js/app.js"></script>
    <!-- Form Helper -->
    <script src="/formhelper/formhelper.bundle.min.js"></script>
     <script src="~/js/jquery-3.5.1.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/jquery.easing.min.js"></script>
    <script src="~/js/scrollspy.min.js"></script>

    <!-- Icons -->
    <script src="~/js/feather.min.js"></script>
    <script src="https://unicons.iconscout.com/release/v2.1.9/script/monochrome/bundle.js"></script>
    <!-- Main Js -->
    <script src="~/js/app.js"></script>
    <!-- Form Helper -->
    <script src="/formhelper/formhelper.bundle.min.js"></script>
 
</body>
</html>


