@model KaleGroup.Web.Models.ChangeUserViewModel
 @{
    ViewData["Title"] = "Menu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

 

<div class="container mt-5 mb-5">
    <div class="heading mb-3">
        <h1 class="text-center">Tüm <span class="text-primary">Kullanıcı Ekle</span></h1>
    </div>
    <form asp-controller="User" asp-action="ChangePasswordUser" asp-validator="true">
        <input type="hidden" asp-for="Id">
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group position-relative">
                    <label>Eski Şifre <span class="text-danger">*</span></label>
                    <i data-feather="user" class="fea icon-sm icons"></i>
                    <input type="password" class="form-control pl-5" placeholder="Eski Şifre" asp-for="OldPassword">
                    <span asp-validation-for="OldPassword" class="text-danger mt-2"></span>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group position-relative">
                    <label>Yeni Şifre <span class="text-danger">*</span></label>
                    <i data-feather="user" class="fea icon-sm icons"></i>
                    <input type="password" class="form-control pl-5" placeholder="Yeni Şifre" asp-for="NewPassword">
                    <span asp-validation-for="NewPassword" class="text-danger mt-2"></span>
                </div>
            </div>

            <div class="col-lg-12">
                <div class="form-group position-relative">
                    <label>Yeni Şifre Tekrar <span class="text-danger">*</span></label>
                    <i data-feather="user" class="fea icon-sm icons"></i>
                    <input type="password" class="form-control pl-5" placeholder="Yeni Şifre Tekrar" value="123" asp-for="NewRepeatPassword">
                    <span asp-validation-for="NewRepeatPassword" class="text-danger mt-2"></span>
                </div>
            </div>
            

            <div class="col-lg-12 mb-0">
                <input type="submit" class="btn btn-primary btn-block" value="Kaydet">
            </div>
        </div>
    </form>
</div>