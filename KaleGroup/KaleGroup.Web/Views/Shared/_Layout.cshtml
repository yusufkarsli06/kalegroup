@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json;
@inject IHttpContextAccessor HttpContextAccessor
@{

    var mySessionSettingsObject = HttpContextAccessor.HttpContext.Session.GetString("settingsModel");

    var settingModel = JsonConvert.DeserializeObject<List<SettingsViewModel>>(mySessionSettingsObject);

    var mySessionObject = HttpContextAccessor.HttpContext.Session.GetString("menuModel");
    var menuModel = JsonConvert.DeserializeObject<List<MenuViewModel>>(mySessionObject);

    var mySessionFooterObject = HttpContextAccessor.HttpContext.Session.GetString("footerModel");
    var footerMenuModel = JsonConvert.DeserializeObject<List<FooterMenuView>>(mySessionFooterObject);
}
