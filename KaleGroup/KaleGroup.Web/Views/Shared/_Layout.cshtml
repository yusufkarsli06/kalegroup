</head>
<body>
    <main>
        <header class="app-header bg-dark text-white sticky-top">
            <div class="container d-flex align-items-center">
                <a href="../" title="">
                    <img src="~/image/logo.svg" alt="" class="mr-10 mr-xl-10" style="height:35px" width="173px">
                </a>
                <ul class="nav flex-grow-1 mr-5 d-none d-lg-flex">

                    @foreach (var item in menuModel)
                    {
                        @if (item.WebPagesViewModel.Count > 0)
                        {
                            <li class="submenu">
                                @if (item.PageUrl != null)
                                {
                                    <a href="@Url.Action("Pages","Home", new { pageUrl = item.PageUrl })" title="@item.Name ">
                                        @item.Name
                                    </a>
                                }
                                else
                                {
                                    <a href="#" title="@item.Name ">
                                        @item.Name
                                    </a>
                                }


                                <ol style="display: none;">
                                    @foreach (var subItem in item.WebPagesViewModel)
                                    {
                                        if (subItem.PageUrl != null)
                                        {
                                            <li>
                                                <a href="@Url.Action("Pages","Home", new { pageUrl = subItem.PageUrl })" title="@subItem.Name">
                                                    @subItem.Name
                                                </a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li>
                                                <a href="#" title="@subItem.Name">
                                                    @subItem.Name
                                                </a>
                                            </li>
                                        }

                                    }

                                </ol>

                            </li>
                        }
                        else
                        {
                            <li class="">
                                @if (item.PageUrl != null)
                                {
                                    <a href="@Url.Action("Pages","Home", new { pageUrl = item.PageUrl })" title="@item.Name ">
                                        @item.Name
                                    </a>
                                }
                                else
                                {
                                    <a href="#" title="@item.Name ">
                                        @item.Name
                                    </a>
                                }



                            </li>

                        }
                    }


                </ul>

                <ul class="nav align-items-center ml-auto">
                    <li class="d-none d-md-inline">
                        @if (ViewBag.Language == "tr")
                        {
                            <a href="#" title="" class="open-search-box d-flex align-items-center">
                                <i class="mdi mdi-magnify text-lg mr-2"></i> Arama
                            </a>
                        }
                        else
                        {
                            <a href="#" title="" class="open-search-box d-flex align-items-center">
                                <i class="mdi mdi-magnify text-lg mr-2"></i> Search
                            </a>

                        }
                    </li>
                    <li class="submenu d-none d-md-inline">
                        @if (ViewBag.Language == "tr")
                        {
                            <a href="#" title="" data-code="tr-TR">
                                Türkçe
                            </a>
                        }
                        else
                        {
                            <a href="#" title="" data-code="tr-TR">
                                English
                            </a>

                        }
                        @if (ViewBag.Language == "tr")
                        {

                            <ol>
                                <li>
                                    <a href="@Url.Action("SetLanguage","Home",new { language = "tr",pageUrl= ViewBag.PageUrl})" data-code="tr-TR" title="T&#xFC;rk&#xE7;e">
                                        Türkçe
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("SetLanguage","Home",new { language = "en" ,pageUrl= ViewBag.PageUrl})" data-code="en-US" title="English">
                                        English
                                    </a>
                                </li>
                            </ol>
                        }
                        else
                        {
                            <ol>
                                <li>
                                    <a href="@Url.Action("SetLanguage","Home",new { language = "tr" ,pageUrl= ViewBag.PageUrl})" data-code="tr-TR" title="T&#xFC;rk&#xE7;e">
                                        Turkish
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("SetLanguage","Home",new { language = "en" ,pageUrl= ViewBag.PageUrl})" data-code="en-US" title="English">
                                        English
                                    </a>
                                </li>
                            </ol>
                        }
                    </li>
                    <li class="d-inline d-xl-none">
                        <a href="#" title="" class="open-search-box-mobile d-flex align-items-center">
                            <i class="mdi mdi-magnify text-xl"></i>
                        </a>
                    </li>
                    <li class="d-inline d-xl-none">
                        <a href="#mobile-menu" title="" class="d-flex align-items-center">
                            <i class="mdi mdi-menu text-xl"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </header>

        <div class="search-box">
            <span class="search-box-close-btn">
                <i class="mdi mdi-close"></i>
            </span>
            <div class="container position-relative h-100">
                <div class="row align-items-center h-100">
                    <div class="col-md-6">
                        <form id="form-search" asp-controller="Home" asp-action="SearchResult">

                            @if (ViewBag.Language == "tr")
                            {
                                <div class="d-flex flex-column">
                                    <div class="form-group">
                                        <input type="text" class="form-control" name="searchText" placeholder="Arama Yapın...">
                                    </div>
                                    <div class="d-none d-md-block">
                                        <div id="all-results" class="mt-10 d-none">
                                            <a href="javascript:$('#form-search').submit();" title="" class="all-results btn btn-outline-dark">
                                                T&#xDC;M SONU&#xC7;LARI G&#xD6;R
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="d-flex flex-column">
                                    <div class="form-group">
                                        <input type="text" class="form-control" name="searchText" placeholder="Search...">
                                    </div>
                                    <div class="d-none d-md-block">
                                        <div id="all-results" class="mt-10 d-none">
                                            <a href="javascript:$('#form-search').submit();" title="" class="all-results btn btn-outline-dark">
                                                Search Results
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                
                            }
                        </form>
                    </div>
                    <div class="col-md-6">
                        <div id="search-results">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @RenderBody()



        <footer class="app-footer bg-dark text-white py-5">
            <div class="container">
                <div class="row">
                    <div class="col-lg-9 order-2 order-md-1">
                        <div class="footer-menu d-flex justify-space-between">


                            @foreach (var item in menuModel)
                            {
                                <ul>
                                    <li>

                                        <a href="@Url.Action("Pages","Home", new { pageUrl = item.PageUrl ==null?"#":item.PageUrl })" title="@item.Name " class="font-weight-semi-bold">
                                            @item.Name
                                        </a>


                                        @foreach (var subItem in item.WebPagesViewModel)
                                        {
                                        <li>
                                            <a href="@Url.Action("Pages","Home", new { pageUrl = item.PageUrl ==null?"#":item.PageUrl })" title="@subItem.Name">
                                                    @subItem.Name
                                            </a>
                                        </li>
                                        }

                                    </li>
                                </ul>
                            }

                        </div>
                    </div>
                    <div class="col-lg-3 order-1 order-md-2">
                        <div class="social-pages text-right">
                            <a href="@settingModel.Where(x=>x.Key=="facebook").Select(x=>x.Value).FirstOrDefault()" target="_blank" title="">
                                <i class="mdi mdi-facebook"></i>
                            </a>

                            <a href="@settingModel.Where(x=>x.Key=="twitter").Select(x=>x.Value).FirstOrDefault()" target="_blank" title="">
                                <i class="mdi mdi-twitter"></i>
                            </a>

                            <a href="@settingModel.Where(x=>x.Key=="linkedin").Select(x=>x.Value).FirstOrDefault()" target="_blank" title="">
                                <i class="mdi mdi-linkedin"></i>
                            </a>

                            <a href="@settingModel.Where(x=>x.Key=="instagram").Select(x=>x.Value).FirstOrDefault()" target="_blank" title="">
                                <i class="mdi mdi-instagram"></i>
                            </a>

                            <a href="@settingModel.Where(x=>x.Key=="youtube").Select(x=>x.Value).FirstOrDefault()" target="_blank" title="">
                                <i class="mdi mdi-youtube"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </footer>

        <div class="bg-light p-3">
            <div class="container d-flex align-items-center justify-content-center justify-md-content-start text-sm flex-wrap">
                @if (ViewBag.Language == "tr")
                {
                    <span>&copy; @DateTime.Now.Year Kale Arge Tüm hakları saklıdır.</span>
                }
                else
                {


                    <span>&copy; @DateTime.Now.Year Kale Arge All rights reserved.</span>
                }
                <div class="ml-md-auto mt-3 mt-md-0">
                    @foreach (var item in footerMenuModel)
                    {
                        if (item.IsUrl)
                        {
                            <a href="@Url.Action("FooterPages","Home", new { pageUrl = item.PageUrl == null?"#":item.PageUrl })" class="mr-5 mr-md-3">
                                @item.Name
                            </a>
                        }
                        else
                        {
                            <a href="@item.PageUrl" class="mr-5 mr-md-3">
                                @item.Name
                            </a>
                        }
                    }


                </div>
            </div>
        </div>
        <nav id="mobile-menu">
            <ul>
                @foreach (var item in menuModel)
                {
                    <li class="submenu">

                        <a href="@Url.Action("Pages", "Home", new { pageUrl = item.PageUrl })" title="@item.Name ">
                            @item.Name
                        </a>

                        <ol>
                            @foreach (var subItem in item.WebPagesViewModel)
                            {
                                <li>
                                    <a href="@Url.Action("Pages","Home", new { pageUrl = subItem.PageUrl })" title="@subItem.Name">
                                        @subItem.Name
                                    </a>
                                </li>
                            }

                        </ol>
                    </li>
                }
            </ul>
            <a href="#" title="" class="menu-close">
                <i class="mdi mdi-close"></i>
            </a>
            <span class="mm-footer">
                <span class="head">
                    <span>
                        <span class="flag-icon flag-icon-tr"></span> T&#xFC;rk&#xE7;e
                    </span>
                    <i class="mdi mdi-chevron-down ml-auto"></i>
                </span>
                <span class="languages">
                    <a href="../" title="" data-code="tr-TR">
                        <span class="flag-icon flag-icon-tr-TR"></span>
                        Türkçe
                    </a>
                    <a href="../" title="" data-code="en-US">
                        <span class="flag-icon flag-icon-en-US"></span>
                        English
                    </a>
                </span>
            </span>
        </nav>

        <div class="search-box-mobile">
            <span class="search-box-close-btn">
                <i class="mdi mdi-close"></i>
            </span>
            <div class="container position-relative h-100">

                <div id="all-results-mobile" class="mt-10 d-none">
                    <a href="javascript:$('#form-search-mobile').submit();" title="" class="all-results btn btn-outline-dark btn-block">
                        T&#xDC;M SONU&#xC7;LARI G&#xD6;R
                    </a>
                </div>
                <div class="row align-items-center h-100">
                    <div class="col-12">
                        <div class="d-flex flex-column">
                            <form id="form-search" asp-controller="Home" asp-action="SearchResult">
                                @if (ViewBag.Language == "tr")
                                {
                                    <div class="form-group">
                                        <input type="text" class="form-control" name="searchText" placeholder="Arama Yap&#x131;n...">
                                    </div>
                                }
                                else
                                {
                                    <div class="form-group">
                                        <input type="text" class="form-control" name="searchText" placeholder="Search...">
                                    </div>
                                }
                                <div id="search-results-mobile"></div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </main>

    <script src="~/js/main.js"></script>
    <script src="../cdn.jsdelivr.net/gh/fancyapps/fancybox%403.5.7/dist/jquery.fancybox.min.js"></script>
    <script src="~/js/search.js"></script>
</body>
</html>
<script>
    $(function () {
        search.init({
            nodeId: 1,
            searchUrl: '/Search/SearchInPages'
        });

        $('.raw-content *').css("font-family", "").css("font-size", "");
        $('.raw-content span, .raw-content font').contents().unwrap();

        $('.lightbox .btn-close').click(function () {
            var popupId = $(this).attr("data-id");

            if ($(this).hasClass("lightbox"))
                $(this).removeClass("open");
            else
                $(this).parents(".lightbox").removeClass("open");

            if (popupId != null && popupId !== '') {
                document.cookie = 'popup-display-' + popupId + '=success';
            }
        });
    })
</script>